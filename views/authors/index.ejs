<h2>Search Authors</h2>
<form action="/authors" method="GET">
  <label for="author_name">Name</label>
  <input
    type="text"
    id="author_name"
    name="author_name"
    placeholder="Author Name"
    value="<%= searchOptions.author_name %>"
  />
  <button type="submit">Search</button>
</form>
<br>
<% authors.forEach(author => { %>
  <div><%= author.name %></div>
<% }); %> 